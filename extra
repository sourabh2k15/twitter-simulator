def divide_and_conquer(list, fun) do
    chunks = Enum.chunk_every(list, 1000)

    chunked_tasks = Enum.each(chunks, fn chunk -> 
      Task.async(fn ->
        fun(chunk) 
      end)
    end)

    result = Enum.reduce(chunked_tasks, [], fn task, acc ->
       acc ++[Task.await(task)]
    end)
  end